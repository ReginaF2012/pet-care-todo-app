<div class="container">
 <% if @upcoming_todos.empty?%>
   <p>
   Looks like there's isn't anything upcoming on your To Do List.<br>
   <a href="/todo-list-items/new">Add something to your To Do List?</a><br>
   <a href="/todo-list-items">Your To Do List</a><br>
   <a href="/">Home</a>
   </p>
 <% else %>
   <h1>Upcoming Items on Your To Do List</h1>
   <ul>
   <% @upcoming_todos.each do |todo| %>
     <li><a href=<%= "/todo-list-items/#{todo.id}" %>><%= "#{todo.name} on #{datetime_to_displaytime(todo.datetime)}" %></a></li>
   <% end %>
   </ul>
 <% end%>
</div>