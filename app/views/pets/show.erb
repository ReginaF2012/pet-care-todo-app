<div class="container">
  <h1><%= @pet.name %></h1>
  <h3><%= "The #{@pet.species}" if @pet.species %></h3>
  <h3><%= "#{@pet.age} years old" if @pet.age %></h3><br>
  <form method="GET" action=<%= "/pets/#{@pet.slug}/edit"%>>
    <p><input type="submit" value="Edit"></p>
  </form>
  <form method="POST" action=<%= "/pets/#{@pet.slug}"%>>
    <input type="hidden" name="_method" value="DELETE">
    <p><input type="submit" value="Delete"></p>
  </form>
  <p>
    <a href="/pets">Back to all of my pets</a><br><br>
    <a href="/">Back to Home</a>
  </p>
</div>