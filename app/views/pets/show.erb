<div class="container">
  <h1><%= @pet.name %></h1>
  <h3><%= "Species: #{@pet.species}" if @pet.species != "" %></h3>
  <h4><%= "Breed: #{@pet.breed}" if @pet.breed != "" %></h4>
  <h3><%= "Age: #{@pet.age} years old" if @pet.age %></h3>
  <h4><%= "Birthday/Gotchaday: #{birthdate_to_display(@pet.birthday)}" if @pet.birthday %></h4><br>
  <form method="GET" action=<%= "/pets/#{@pet.slug}/edit"%>>
    <input type="submit" value="Edit"><br><br>
  </form>
  <form method="POST" action=<%= "/pets/#{@pet.slug}"%>>
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Delete"><br><br>
  </form>
  <p>
    <a href="/pets">Back to all of my pets</a><br><br>
    <a href="/">Back to Home</a>
  </p>
</div>