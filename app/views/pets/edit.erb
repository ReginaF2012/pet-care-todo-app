<div class="container">
<h1>Edit <%= @pet.name %>'s Information.</h1>
  <form method="POST" action=<%= "/pets/#{@pet.slug}" %>>
    <input type="hidden" name="_method" value="PATCH">
    <label for="pet[name]">Name:</label>
    <input type="text" name="pet[name]" value="<%= @pet.name %>"><br><br>
    <label for="pet[species]">Species:</label>
    <input type="text" name="pet[species]" value="<%= @pet.species %>"><br><br>
    <label for="pet[age]">Age:</label>
    <input type="number" name="pet[age]" value="<%= @pet.age %>"><br><br>
    <input type="submit" value="Done!">
  </form>
</div>