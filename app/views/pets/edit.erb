<h1>Edit <%= @pet.name %>'s Information.</h1>
  <form method="POST" action=<%= "/pets/#{@pet.slug}" %>>
    <input type="hidden" name="_method" value="PATCH">
    <label for="pet[name]">Name:</label>
    <input type="text" name="pet[name]" value="<%= @pet.name %>"  required>*<br><br>
    <label for="pet[species]">Species:</label>
    <input type="text" name="pet[species]" value="<%= @pet.species %>"><br><br>
    <label for="pet[breed]">Breed:</label>
    <input type="text" name="pet[breed]" value="<%= @pet.breed %>"><br><br>
    <label for="pet[birthday]">Birthday/Gotcha Day:</label>
